<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Detail</title>
  <link rel="stylesheet" href="/main.css">
</head>
<body class="grey-bg">

  <%- include('nav.ejs') %> 

  <div class="detail-bg">
    <h4><%= post.title %></h4>
    <p><%= post.content %></p>
    <p>작성자: <%= post.username %></p> 

    <% if (post.img != null && post.img != "") { %>
    <div class="img-box">
      <img src="<%= post.img %>" alt="업로드된 이미지" style="max-width: 100%; margin-bottom: 20px;">
    </div>
    <% } %>

    <div class="content-box">
      <p><%= post.content %></p>
    </div>

    <% if (user && String(user._id) !== String(post.user)) { %> 
    <button onclick="requestChat('<%= post.user %>', '<%= post._id %>')">
      채팅하기
    </button>
  <% } %>
  </div>


  <div class="detail-bg">
    <h4>댓글 작성</h4>
    <form action="/comment" method="POST">
      <input type="hidden" name="postId" value="<%= post._id %>">
      <input name="content" placeholder="댓글을 입력하세요" style="width: 100%; margin-bottom: 10px;">
      <button type="submit">등록</button>
    </form>
  </div>

  <div class="detail-bg" style="margin-top: 20px;">
    <h4>댓글 목록</h4>
    <% if (comments.length > 0) { %>
      <% comments.forEach(function(comment){ %>
        <div style="border-bottom: 1px solid #eee; padding: 10px;">
          
          <strong><%= comment.writer %></strong>
          <p style="margin: 5px 0;"><%= comment.content %></p>

          <% if (user && user.username == comment.writer) { %>
            <form action="/comment/delete/<%= comment._id %>?_method=DELETE" method="POST" style="display:inline;">
              <input type="hidden" name="postId" value="<%= post._id %>">
              <button type="submit">삭제</button>
            </form>
          <% } %>

        </div>
      <% }) %>
    <% } else { %>
      <p>댓글이 없습니다. 첫 번째 댓글을 남겨보세요!</p>
    <% } %>
  </div>

<script>
  async function requestChat(writerId, postId) {
    // 서버에 채팅방 개설 요청
    const response = await fetch('/chat/request', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ writerId: writerId, postId: postId })
    });

    const result = await response.json();

    if (response.status === 200) {
      // 채팅방으로 이동 (result.roomId는 서버에서 보내준 방 ID)
      window.location.href = `/chat/room/${result.roomId}`;
    } else if (response.status === 401) {
      alert('로그인이 필요합니다.');
      window.location.href = '/login';
    } else {
      alert(result.message);
    }
  }
</script>
</body>
</html>